<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/nav_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/windowBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/bottom_nav_menu" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/add_proposal_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:elevation="9dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/nav_view"/>
        
    <RelativeLayout
            android:id="@+id/schedule_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/nav_host_fragment_activity_bottom_bar"
            android:background="#e6ffe6">
    
            <TextView
                android:id="@+id/scheduledate_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Programma del giorno x"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="1dp"
                android:visibility="visible"
                android:clickable="true"/>
    
            <TextView
                android:id="@+id/total_activities"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AttivitÃ  totali"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="1dp"
                android:visibility="invisible"
                android:clickable="true"/>
    
            <Switch
                android:id="@+id/simpleSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"/>        <!--android:textOff="Totali"
                android:textOn="Giornaliere"-->
    
        </RelativeLayout>
    
        <RelativeLayout
            android:id="@+id/chips_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/schedule_layout"
            android:background="#e6ffe6">
    
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">
    
                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chip_group"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    app:singleLine="true">
    
                    <com.google.android.material.chip.Chip
                        android:id="@+id/shopping_chip"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Spesa"
                        android:checkable="true"
                        android:checked="false"/>
                    <com.google.android.material.chip.Chip
                        android:id="@+id/houseworks_chip"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Lavori Domestici"
                        android:checkable="true"
                        android:checked="false"/>
                    <com.google.android.material.chip.Chip
                        android:id="@+id/cleaning_chip"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Pulizie"
                        android:checkable="true"
                        android:checked="false"/>
                    <com.google.android.material.chip.Chip
                        android:id="@+id/transport_chip"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Trasporto"
                        android:checkable="true"
                        android:checked="false"/>
                    <com.google.android.material.chip.Chip
                        android:id="@+id/random_chip"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Varie"
                        android:checkable="true"
                        android:checked="false"/>
    
                </com.google.android.material.chip.ChipGroup>
            </HorizontalScrollView>
        </RelativeLayout>

    <fragment
        android:id="@+id/nav_host_fragment_activity_bottom_bar"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:defaultNavHost="true"
        app:layout_constraintBottom_toTopOf="@id/nav_view"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:navGraph="@navigation/mobile_navigation"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/outer_constraintlayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginBottom="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/list_element_roundcorner">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:clipToPadding="false"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardElevation="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/post"
            android:layout_width="346dp"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:visibility="visible">

            <androidx.cardview.widget.CardView
                android:id="@+id/thumb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                app:cardCornerRadius="100dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:cardElevation="5dp">

                <ImageView
                    android:id="@+id/user_profile_pic"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    tools:srcCompat="@tools:sample/avatars" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/post_publisher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:gravity="center"
                android:lines="3"
                android:text="post_publisher"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintBaseline_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@id/thumb"
                app:layout_constraintStart_toEndOf="@id/thumb"
                tools:layout_editor_absoluteY="-7dp" />

            <TextView
                android:id="@+id/post_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:gravity="center"
                android:lines="3"
                android:text="post_title"
                android:textStyle="bold"
                app:layout_constraintBaseline_toBottomOf="@id/post_publisher"
                app:layout_constraintLeft_toRightOf="@id/thumb"
                app:layout_constraintStart_toEndOf="@id/thumb"
                tools:layout_editor_absoluteY="-7dp" />

            <TextView
                android:id="@+id/post_body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:gravity="center"
                android:text="post_body"
                app:layout_constraintBaseline_toBottomOf="@id/post_title"
                app:layout_constraintLeft_toRightOf="@id/thumb"
                app:layout_constraintStart_toEndOf="@id/thumb"
                tools:layout_editor_absoluteY="49dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/buttons_container_recycler_otherpost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cardView"
        android:orientation="horizontal"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardView">

        <ImageButton
            android:id="@+id/flag_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_flag"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="3dp"
            android:background="@drawable/button_roundcorner"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttons_container_recycler_mypost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cardView"
        android:orientation="horizontal"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardView">

        <android.widget.Space
            android:layout_width="130dp"
            android:layout_height="wrap_content" />

        <ImageButton
            android:id="@+id/delete_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:src="@drawable/ic_delete"
            android:layout_marginBottom="3dp"

            android:background="@drawable/button_roundcorner"/>

        <android.widget.Space
            android:layout_width="100dp"
            android:layout_height="wrap_content" />

        <ImageButton
            android:id="@+id/edit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_edit"
            android:layout_marginBottom="3dp"
            android:background="@drawable/button_roundcorner"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
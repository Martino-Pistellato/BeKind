<PreferenceScreen
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ListPreference
        app:defaultValue="light_theme"
        app:entries="@array/theme_entries"
        app:entryValues="@array/theme_values"
        app:key="theme"
        app:title="Seleziona tema"
        android:icon="@drawable/ic_outline_palette_24"/>

    <ListPreference
        app:defaultValue="medium_font_size"
        app:entries="@array/font_size_entries"
        app:entryValues="@array/font_size_values"
        app:key="font_size"
        app:title="Grandezza testo"
        android:icon="@drawable/ic_baseline_text_increase_24"/>

    <Preference
        app:key="logout"
        app:title="Logout"
        android:icon="@drawable/ic_baseline_logout_24"
        />

    <Preference
        app:key="tutorial"
        app:title="Rivedi tutorial"
        android:icon="@drawable/ic_baseline_help_outline_24"
        />

    <Preference
        app:key="privacy"
        app:title="Informazioni sulla privacy"
        android:icon="@drawable/ic_outline_privacy_tip_24"
        />

</PreferenceScreen>